<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobileprogramingproject_7">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".KakaoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobileProgramingProject_7">
        <activity
            android:name=".MypageActivity"
            android:exported="false"
            android:theme="@style/Theme.Design.Light.NoActionBar"/>
        <activity
            android:name=".TestActivity"
            android:exported="false"
            android:label="@string/title_activity_test"
            android:theme="@style/Theme.MobileProgramingProject_7.NoActionBar" /> <!-- open api 사용 위해 추가 - 지성 -->
        <!-- 로그인 액티비티 - 윤섭 -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.MobileProgramingProject_7.NoActionBar"/>

        <!-- 로딩(스플래시) 액티비티. 액션바 안보이게 제거 - 윤섭 -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Design.Light.NoActionBar">

        </activity>
        <!-- 카카오 로그인 Redirect URI 관련 설정 - 윤섭 -->
        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Redirect URI: "kakao${NATIVE_APP_KEY}://oauth" -->
                <data
                    android:host="oauth"
                    android:scheme="kakao916252b1d687bf94d0ebf57bf3f59fcb" />
            </intent-filter>
        </activity>
        <activity android:name=".CenterActivity"
            android:exported="true"
            android:theme="@style/Theme.MobileProgramingProject_7.NoActionBar"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ReviewPopupActivity"
            android:exported="true"
            android:theme="@style/Theme.MobileProgramingProject_7.PopupOverlay"
            />
        <activity android:name=".WheelchairActivity"
            android:exported="true"
            android:theme="@style/Theme.MobileProgramingProject_7.NoActionBar"
            >
        </activity>

    </application>

</manifest>